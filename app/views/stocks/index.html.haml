%h1 Listing stocks

%table
  %thead
    %tr
      %th User
      %th Name
      %th Description
      %th Region
      %th Address
      %th Store price
      %th Rating
      %th
      %th
      %th

  %tbody
    - @stocks.each do |stock|
      %tr
        %td= stock.user_id
        %td= stock.name
        %td= stock.description
        %td= stock.region
        %td= stock.address
        %td= stock.store_price
        %td= stock.rating
        %td= link_to 'Show', stock
        %td= link_to 'Edit', edit_stock_path(stock)
        %td= link_to 'Destroy', stock, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Stock', new_stock_path
