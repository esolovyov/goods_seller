= form_for @stock do |f|
  - if @stock.errors.any?
    #error_explanation
      %h2= "#{pluralize(@stock.errors.count, "error")} prohibited this stock from being saved:"
      %ul
        - @stock.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :region
    = f.text_field :region
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :store_price
    = f.text_field :store_price
  .field
    = f.label :rating
    = f.number_field :rating
  .actions
    = f.submit 'Save'
