= form_for @seller do |f|
  - if @seller.errors.any?
    #error_explanation
      %h2= "#{pluralize(@seller.errors.count, "error")} prohibited this seller from being saved:"
      %ul
        - @seller.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :user_id
    = f.number_field :user_id
  .field
    = f.label :region
    = f.text_field :region
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :active
    = f.check_box :active
  .field
    = f.label :raiting
    = f.number_field :raiting
  .actions
    = f.submit 'Save'
