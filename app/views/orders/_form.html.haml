= form_for @order do |f|
  - if @order.errors.any?
    #error_explanation
      %h2= "#{pluralize(@order.errors.count, "error")} prohibited this order from being saved:"
      %ul
        - @order.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :seller_id
    = f.number_field :seller_id
  .field
    = f.label :price
    = f.text_field :price
  .field
    = f.label :delivery_price
    = f.text_field :delivery_price
  .field
    = f.label :region
    = f.text_field :region
  .field
    = f.label :address
    = f.text_field :address
  .field
    = f.label :comment
    = f.text_area :comment
  .actions
    = f.submit 'Save'
